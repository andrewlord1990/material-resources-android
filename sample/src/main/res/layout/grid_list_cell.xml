<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mdgrid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageView
      android:id="@+id/image"
      android:layout_width="match_parent"
      android:layout_height="@dimen/grid_cell_size"
      android:contentDescription="@string/sample_grids_image_cd"
      tools:background="@color/md_amber_500"/>

  <com.github.andrewlord1990.materialandroid.component.grid.GridItemView
      android:id="@+id/label"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/md_dark_disabled_hint_text_38"
      mdgrid:md_grid_icon="@drawable/ic_star_white"
      mdgrid:md_grid_primary_text_color="@color/md_light_primary_text_100"
      mdgrid:md_grid_secondary_text="@string/sample_lists_secondary"
      mdgrid:md_grid_secondary_text_color="@color/md_light_primary_text_100"
      tools:layout_alignBottom="@id/image"
      tools:layout_height="@dimen/md_grid_list_single_line_label_height"/>

</RelativeLayout>